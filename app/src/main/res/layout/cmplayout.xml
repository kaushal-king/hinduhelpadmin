<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_marginBottom="@dimen/_15sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/bill_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help No. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpcmpid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/bill_text1"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/bill_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpcmpname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/bill_name1"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/bill_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help Date. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpcmpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/bill_date1"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpmoboo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_k"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="detail. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpcmptxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_txt"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_typep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of Help. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helptypecmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_typep"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_neede"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how help is needed. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpneedcmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_neede"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helper Name. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpercmpname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your request under Processing"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_name"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:id="@+id/help_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helper Mobile No. :"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/helpercmpmob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your request under Processing"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/help_mob"
                    android:textSize="16sp"/>
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"

        />
</LinearLayout>